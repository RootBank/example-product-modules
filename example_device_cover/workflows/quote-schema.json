      "addButtonLabel": "Add another device",
      "removeButtonLabel": "Remove device"
    },
    "components": [
      {
        "type": "section-header",
        "key": "h-1",
        "label": "Device",
        "props": {
          "headingTag": "h4"
        }
      },
      {
        "key": "device_type",
        "type": "select",
        "label": "Device type *",
        "options": [
          {
            "label": "Cellphone",
            "value": "cellphone"
          },
          {
            "label": "Tablet",
            "value": "tablet"
          },
          {
            "label": "Laptop",
            "value": "laptop"
          },
          {
            "label": "Smartwatch",
            "value": "smartwatch"
          },
          {
            "label": "Digital Camera",
            "value": "digital_camera"
          },
          {
            "label": "E-Reader",
            "value": "e_reader"
          },
          {
            "label": "Portable Gaming Console",
            "value": "portable_gaming_console"
          },
          {
            "label": "Drone",
            "value": "drone"
          },
          {
            "label": "Fitness Tracker",
            "value": "fitness_tracker"
          },
          {
            "label": "Bluetooth Earbuds",
            "value": "bluetooth_earbuds"
          },
          {
            "label": "Portable Speaker",
            "value": "portable_speaker"
          },
          {
            "label": "VR Headset",
            "value": "vr_headset"
          },
          {
            "label": "Smart Glasses",
            "value": "smart_glasses"
          },
          {
            "label": "External Hard Drive",
            "value": "external_hard_drive"
          },
          {
            "label": "Portable Media Player",
            "value": "portable_media_player"
          }
        ],
        "validators": [
          {
            "validation": {
              "type": "required"
            }
          }
        ]
      },
      {
        "key": "value",
        "type": "currency",
        "label": "What is the replacement value of this device?",
        "props": {
          "prefix": "£"
        },
        "validators": [
          {
            "validation": {
              "type": "required"
            }
          },
          {
            "validation": {
              "min": 5000,
              "type": "greaterThanCurrency"
            }
          },
          {
            "validation": {
              "max": 1000000,
              "type": "lessThanCurrency"
            }
          }
        ]
      },
      {
        "type": "paragraph",
        "key": "p-1",
        "label": "_Device details will be required after quote presented._"
      },
      {
        "type": "horizontal-line",
        "key": "hr-1"
      }
    ]
  },
  {
    "type": "section-header",
    "key": "h-2",
    "label": "Cover details",
    "props": {
      "headingTag": "h3"
    }
  },
  {
    "type": "radio-button",
    "key": "cover_type",
    "label": "What cover type would you like? *",
    "options": [
      {
        "label": "Theft-only",
        "value": "theft"
      },
      {
        "label": "Comprehensive",
        "value": "comprehensive"
      }
    ]
  },
  {
    "type": "checkbox",
    "key": "loaner_device",
    "label": "Do you want the loaner unit add-on?",
    "displayConditions": [
      {
        "path": "cover_type",
        "value": "comprehensive",
        "condition": "==="
      }
    ]
  },
  {
    "type": "select",
    "key": "excess",
    "label": "How much excess would you prefer? *",
    "options": [
      {
        "label": "£50",
        "value": "£50"
      },
      {
        "label": "£100",
        "value": "£100"
      },
      {
        "label": "£200",
        "value": "£200"
      },
      {
        "label": "£300",
        "value": "£300"
      }
    ]
  },
  {
    "type": "select",
    "key": "claims_history",
    "label": "How many bicycle insurance claims have you had in the last 3 years? *",
    "options": [
      {
        "label": "None",
        "value": "0"
      },
      {
        "label": "1",
        "value": "1"
      },
      {
        "label": "2",
        "value": "2"
      },
      {
        "label": "3",
        "value": "3"
      },
      {
        "label": "4+",
        "value": "4+"
      }
    ]
  },
  {
    "type": "text",
    "key": "area_code",
    "label": "What is your home area code? *",
    "validators": [
      {
        "validation": {
          "type": "required"
        }
      }
    ]
  },
  {
    "type": "section-header",
    "key": "h-3",
    "label": "Discounts",
    "props": {
      "headingTag": "h3"
    }
  },
  {
    "type": "text",
    "key": "discount_code",
    "label": "If you have a discount code, enter it here."
  },
  {
    "type": "paragraph",
    "key": "p-1",
    "label": "_Demo note: use key DEVICE123 to showcase discount._"
  },
  {
    "type": "blank-space",
    "key": "bs-1"
  }
]
