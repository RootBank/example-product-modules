{
  "$schema": "https://api.rootplatform.com/v1/cli/json-schemas/root-config",
  "productModuleName": "Pet",
  "productModuleKey": "staging_template_pet",
  "organizationId": "70294dd2-b9bc-4f77-844a-1d1ed7cfc3f4",
  "host": "api.rootplatform.com",
  "codeFileOrder": [
    "main.js",
    "00-helpers.js",
    "01-ratings.js",
    "02-quote-hook.js",
    "03-application-hook.js",
    "04-policy-issue-hook.js",
    "05-alteration-hooks.js"
  ],
  "settings": {
    "policySchemeType": "individual",
    "dashboardIssuingEnabled": true,
    "activatePoliciesOnEvent": "payment_method_assigned",
    "canReactivatePolicies": true,
    "notTakenUpEnabled": true,
    "welcomeLetterEnabled": true,
    "policyDocuments": [
      {
        "type": "terms",
        "fileName": "policy_{{ policy.policyNumber }}_terms"
      },
      {
        "type": "policy_schedule",
        "fileName": "policy_{{ policy.policyNumber }}_schedule"
      },
      {
        "type": "certificate",
        "enabled": false
      }
    ],
    "canRequote": false,
    "gracePeriod": {
      "lapseOn": {
        "afterFirstMissedPayment": null,
        "consecutiveMissedPayments": {
          "number": 2
        },
        "missedPaymentsOverPolicyTerm": null,
        "missedPaymentsWithinPeriod": null
      },
      "lapseExclusionRules": {
        "lapsePolicyWithProcessingPayment": false
      }
    },
    "waitingPeriod": {
      "applyTo": {
        "theFullPolicy": null
      }
    },
    "coolingOffPeriod": {
      "applyTo": {
        "theFullPolicy": {
          "refundType": "all_premiums",
          "period": 14,
          "periodType": "days"
        }
      }
    },
    "policyAnniversaryNotification": {
      "daysBeforeToSend": 30
    },
    "policyholder": {
      "individualsAllowed": true,
      "individualsIdAllowed": true,
      "individualsPassportAllowed": true,
      "individualsCellphoneAllowed": false,
      "individualsCustomIdAllowed": false,
      "individualsEmailAllowed": false,
      "companiesAllowed": false,
      "individualPolicyholderFields": {
        "address": {
          "suburb": {
            "required": true
          }
        },
        "dateOfBirth": {
          "required": true
        }
      },
      "idCountry": "ZA"
    },
    "beneficiaries": {
      "makePolicyholderABeneficiary": true,
      "min": 1,
      "max": 1
    },
    "claims": {
      "checklistItems": [
        "Has the claim form been fully completed?",
        "Is the detailed invoice attached?",
        "Is the proof of payment attached?",
        "Is the full veterinary history attached (a vaccination certificate is not sufficient)?",
        "Have all premiums been paid?"
      ],
      "documentLabels": [
        "Claim form",
        "Invoice",
        "Proof of payment",
        "Full vetinary history"
      ]
    },
    "billing": {
      "allowStartDateChange": true,
      "billBeforeWeekendEnabled": false,
      "billingFrequency": "monthly",
      "consecutiveFailedPaymentsAllowed": 4,
      "currency": "ZAR",
      "enableBillingOnSandbox": true,
      "paymentSubmissionLeadTime": 0,
      "clientStatementReference": "INSURANCE",
      "paymentMethodTypes": {
        "debitOrders": {
          "enabled": true,
          "strategy": "best_effort",
          "naedoPoliciesInArrears": false
        },
        "card": {
          "enabled": false
        },
        "eft": {
          "enabled": false
        },
        "external": {
          "enabled": false,
          "createPayments": false
        }
      },
      "retryFailedPayments": {
        "enabled": true,
        "daysBetweenRetries": 5,
        "numberOfRetries": 2
      },
      "proRataBilling": {
        "enabled": true,
        "proRataBillingOnIssue": false,
        "minimumAmount": 0
      }
    }
  },
  "alterationHooks": [
    {
      "key": "amendment",
      "name": "Amend policy"
    }
  ],
  "scheduledFunctions": [],
  "fulfillmentTypes": []
}
